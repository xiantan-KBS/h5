/* 全局系统样式定义 */
.list-item-container {
  height: 100%;
}
.list-item-container .scroll-list-item {
  height: 100%;
}
.list-item-container .scroll-list-item .author-container {
  padding: 0 20rpx;
  margin: 20rpx 0;
}
.list-item-container .scroll-list-item .author-container .author-item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  border-bottom: 1px solid #eee;
}
.list-item-container .scroll-list-item .author-container .author-item .left {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.list-item-container .scroll-list-item .author-container .author-item .left image {
  width: 100%;
  height: 100%;
}
.list-item-container .scroll-list-item .author-container .author-item .right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: flex-start;
  margin: 0 30rpx;
}
.list-item-container .scroll-list-item .author-container .author-item .right .top .author-name {
  font-size: 28rpx;
  color: #333;
}
.list-item-container .scroll-list-item .author-container .author-item .right .bottom {
  width: 100%;
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
}
.list-item-container .scroll-list-item .author-container .author-item .right .bottom .author-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
}
.list-item-container .scroll-list-item .author-container .author-item .right .bottom .author-info .article-count, .list-item-container .scroll-list-item .author-container .author-item .right .bottom .author-info .fans-count {
  font-size: 24rpx;
  padding: 0 20rpx;
}

